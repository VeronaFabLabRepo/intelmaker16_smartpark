extend ./base

block body
  nav.navbar.navbar-default.navbar-fixed-top
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
          span.sr-only Toggle navigation
          span.icon-bar.top-bar
          span.icon-bar.middle-bar
          span.icon-bar.bottom-bar
        a.navbar-brand(href='#/map') Intel Smart Park
      #navbar.navbar-collapse.collapse
        ul.nav.navbar-nav
          li
            a(href='#/map', data-toggle='collapse', data-target='#navbar')
              img(src="public/ic_map_24px.svg")
              |Map
          li
            a(href='#/about', data-toggle='collapse', data-target='#navbar')
              img(src="public/ic_info_outline_24px.svg")
              |About
          li
            a(href='#/contact', data-toggle='collapse', data-target='#navbar')
              img(src="public/ic_mail_outline_24px.svg")
              |Contact

  div(ng-view)
